<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="5dp" >

<ImageView
    android:id="@+id/info_window_imagen"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:scaleType="centerCrop"
    android:src="@drawable/bank" />

<TextView
    android:id="@+id/info_window_banco"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@id/info_window_imagen"
    android:paddingLeft="5dp"
    android:text="Banco Santander RÃ­o" />

<TextView
    android:id="@+id/info_window_direccion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_below="@id/info_window_banco"
    android:layout_toRightOf="@id/info_window_imagen"
    android:paddingLeft="5dp"
    android:text="SAN MARTIN Y SARMIENTO" />

<TextView
    android:id="@+id/info_window_red"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/info_window_direccion"
    android:layout_toRightOf="@id/info_window_imagen"
    android:paddingLeft="5dp"
    android:text="BANELCO" />

<TextView
    android:id="@+id/info_window_terminales"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/info_window_red"
    android:layout_toRightOf="@id/info_window_imagen"
    android:paddingLeft="5dp"
    android:text="Terminales: 2" />

</RelativeLayout>